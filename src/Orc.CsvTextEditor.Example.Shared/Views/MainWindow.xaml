<catel:Window x:Class="Orc.CsvTextEditor.Views.MainWindow"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              xmlns:catel="http://schemas.catelproject.com"
              xmlns:orccontrols="http://schemas.wildgums.com/orc/controls"
              xmlns:orccsvtexteditor="http://schemas.wildgums.com/orc/csvtexteditor"
              mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="400">

    <orccontrols:StackGrid>
        <Grid.RowDefinitions>
          <RowDefinition Height="*" />
          <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <orccsvtexteditor:CsvTextEditorControl Text="one,two,three,four,five"
                                               Scope="{Binding Scope}"/>

        <Button Command="{Binding FindAndReplace}" Content="Find and Replace"/>
		
    </orccontrols:StackGrid>

</catel:Window>

