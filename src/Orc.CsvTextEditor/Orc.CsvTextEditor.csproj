<Project Sdk="MSBuild.Sdk.Extras">
  <PropertyGroup>
    <TargetFrameworks>net46;net47;netcoreapp3.0</TargetFrameworks>
    <AssemblyName>Orc.CsvTextEditor</AssemblyName>
    <RootNamespace>Orc.CsvTextEditor</RootNamespace>
    <DefaultLanguage>en-US</DefaultLanguage>
    <PackageId>Orc.CsvTextEditor</PackageId>
    <PackageVersion>1.0.0-alpha0001</PackageVersion>
    <Description>Csv text editor library.</Description>
    <PackageTags>orc;csv;text;editor</PackageTags>
    <UseWpf>true</UseWpf>
  </PropertyGroup>

  <PropertyGroup>
    <!-- SonarQube requires a project guid -->
    <ProjectGuid>A97B1B48-88B2-47DC-BC78-9AF835DCF2A0</ProjectGuid>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="AvalonEdit" Version="5.0.4" />
    <PackageReference Include="MethodTimer.Fody" Version="2.1.1" PrivateAssets="all" />
    <PackageReference Include="Catel.Core" Version="5.9.0-alpha0031" />
    <PackageReference Include="Catel.Fody" Version="3.5.0" PrivateAssets="all" />
    <PackageReference Include="Catel.MVVM" Version="5.9.0-beta0005" />
    <PackageReference Include="Fody" Version="3.1.3" PrivateAssets="all">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="ModuleInit.Fody" Version="1.8.1" PrivateAssets="all" />
    <PackageReference Include="Obsolete.Fody" Version="4.4.3" PrivateAssets="all" />
    <PackageReference Include="WpfAnalyzers" Version="2.1.3.2" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>
  
  <ItemGroup>
    <None Remove="Resources\Highlightings\CustomHighlighting.xshd" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="Resources\Highlightings\CustomHighlighting.xshd" />
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Update="NETStandard.Library" Version="2.0.1" />
  </ItemGroup>

  <Import Project="$(MSBuildProjectDirectory)\..\Directory.build.shared.explicit.props" Condition="Exists('$(MSBuildProjectDirectory)\..\Directory.build.shared.explicit.props')" />
  <Import Project="$(MSBuildProjectDirectory)\..\Directory.build.shared.mat.props" Condition="Exists('$(MSBuildProjectDirectory)\..\Directory.build.shared.mat.props')" />
</Project>